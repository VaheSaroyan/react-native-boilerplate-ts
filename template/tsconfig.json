{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es6",
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
  ]
}
